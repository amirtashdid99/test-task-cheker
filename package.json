{
  "name": "temp-app",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Your Name <your.email@example.com>",
  "description": "Your app description",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently \"BROWSER=none npm start\" \"npm run electron:wait\"",
    "electron:wait": "sleep 5 && electron .",
    "electron:build": "npm run build && electron-builder build --mac -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "com.yourcompany.yourappname",
    "productName": "Your App Name",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "concurrently": "^7.0.0",
    "electron-is-dev": "^1.0.0",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
