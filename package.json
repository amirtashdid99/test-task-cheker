{
  "name": "student-tasks",
  "version": "0.1.0",
  "description": "A student task management application",
  "author": "Your Name <your.email@example.com>",
  "private": true,
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "4.0.3"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "package": "electron-builder build --mac -c.extraMetadata.main=build/electron.js --publish never",
    "electron:dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --mac dir"
  },
  "build": {
    "appId": "com.amir-rahkar.task-checker",
    "productName": "Task Checker",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "scripts/notarize.js"
  },
  "devDependencies": {
    "electron": "^13.6.9",
    "concurrently": "^9.0.1",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^8.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
